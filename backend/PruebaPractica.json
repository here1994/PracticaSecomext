{
    "info": {
        "name": "Pruebas API - PruebaPráctica",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Productos",
            "item": [
                {
                    "name": "Obtener todos los productos",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8080/api/productos",
                            "protocol": "http",
                            "host": ["localhost"],
                            "port": "8080",
                            "path": ["api", "productos"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Estado 200 OK', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "pm.test('La respuesta debe ser un array', function () {",
                                    "    pm.expect(pm.response.json()).to.be.an('array');",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Crear un nuevo producto",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"nombre\": \"Producto de prueba\",\n    \"precio\": 99.99,\n    \"categoria\": {\n        \"id\": 1\n    }\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8080/api/productos",
                            "protocol": "http",
                            "host": ["localhost"],
                            "port": "8080",
                            "path": ["api", "productos"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Estado 201 Created', function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "pm.test('El producto tiene un ID generado', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('id');",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Eliminar un producto",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8080/api/productos/1",
                            "protocol": "http",
                            "host": ["localhost"],
                            "port": "8080",
                            "path": ["api", "productos", "1"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Estado 200 OK o 204 No Content', function () {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 204]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
